{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/prisma-orm/client": ["../prisma-orm/node_modules/@prisma/client"],
    },
  },
  "exclude": ["node_modules", "**/*/lib", "**/*/dist"]
}
